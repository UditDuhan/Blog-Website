<%- include("partials/header") %>

<div class="ui main text container segment">
    <h1 class="ui huge header">Edit Blog</h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </label>
        </div>
        <div class="field">
            <label>Image
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </label>
        </div>
        <div class="field">
            <label>Blog Content
                <textarea name="blog[body]" required><%- blog.body %></textarea>
            </label>
        </div>
        <button class="ui teal inverted big button">Submit</button>
    </form>
</div>

<%- include("partials/footer") %>