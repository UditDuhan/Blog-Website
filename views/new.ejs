<%- include("partials/header") %>

<div class="ui main text container segment">
    <h1 class="ui huge header">New Blog</h1>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title
                <input type="text" name="blog[title]" placeholder="Title">
            </label>
        </div>
        <div class="field">
            <label>Image
                <input type="text" name="blog[image]" placeholder="Image Url">
            </label>
        </div>
        <div class="field">
            <label>Blog Content
                <textarea name="blog[body]" required></textarea>
            </label>
        </div>
        <button class="ui green inverted big button">Submit</button>
    </form>
</div>

<%- include("partials/footer") %>